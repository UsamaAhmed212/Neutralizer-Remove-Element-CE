{
    "manifest_version": 3,
    "name": "Neutralizer - Remove Element",
    "version": "1.0.0",
    "description": "Description of your extension",
    "icons": {
        "128": "icons/icon_128.png",
		"48": "icons/icon_48.png",
		"16": "icons/action_inactive.png"
    },
    "action": {
        "default_icon": "icons/action_inactive.png"
    },
    "permissions": [
        "activeTab",
        "commands",
        "scripting",
        "contextMenus"
    ],
    "commands": {
		"_execute_action": {
			"suggested_key": {
				"windows": "Ctrl+X",
				"mac": "Command+X",
				"chromeos": "Ctrl+X",
				"linux": "Ctrl+X"
			}
		}
	},
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "all_frames": false,
            "matches": [ "*://*/*" ],
            "js": [ "remove.js", "ctre_content.js" ],
		    "run_at": "document_end"
        }
    ],
	"host_permissions": [ "*://*/*" ],
    "web_accessible_resources": [
        {
            "matches": [ "*://*/*" ],
            "resources": [ "content.css" ]
	    }
    ]
}
